---
import getPathsIcon from "@utils/getPathsIcon";
import type { TypeRoutine } from "@interfaces/routines";
import ArrowButton from "@components/ArrowButton.astro";
import Engrane from "@assets/icons/astro/Engrane.astro";

interface Props {
  id: string;
  level: number;
  title: string;
}

const { id, level, title } = Astro.props;
---

<div
  id={`card__${id}`}
  data-card
  transition:name={`card__${id}`}
  class="w-full bg-theme-secondary h-20 text-theme-text-light pl-6 pr-8 flex items-center"
>
  <div class="w-1/6 mr-12">
    <svg width="48" height="48" transition:name={`icon_${id}`}>
      <use
        href={encodeURI(
          `/icons_routines.svg#${getPathsIcon(id as TypeRoutine)}`,
        )}></use>
    </svg>
  </div>
  <div class="w-5/6 flex items-center justify-start h-full">
    <p class="text-2xl w-full font-bold" transition:name={`title_${id}`}>
      {title.toUpperCase()}
    </p>
  </div>
</div>
<div class="flex gap-4 items-center justify-between p-4">
  <div class="flex items-center gap-4">
    <a href="/" class="flex items-center">
      <ArrowButton position="left" />
    </a>
    <h3 class="text-theme-tertiary text-xl">NIVEL {level}</h3>
  </div>
  <div class="">
    <div class="flex gap-1">
      {new Array(level).fill(0).map(() => <Engrane active />)}
    </div>
  </div>
</div>
