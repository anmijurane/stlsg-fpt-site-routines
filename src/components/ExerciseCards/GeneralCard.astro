---
import CheckButton from "@components/CheckButton.astro";
import ChipCategory from "@components/ChipCategory.astro";

interface Props {
  title: string;
  zone: string;
  series: number;
  rep: number;
  img: string;
}

const { title, zone, series, rep, img } = Astro.props;
---

<div
  class="border border-theme-grandient rounded-[20px] w-full bg-gradient-to-br from-[#FFFFFF] to-[#FAEEFF]"
>
  <div class="flex h-full justify-between px-2 pt-4 mb-2 items-center w-full">
    <p class="text-theme-primary text-2xl font-semibold w-10/12">{title}</p>
    <CheckButton />
  </div>
  <div class="flex items-center px-4 gap-2">
    <div class="w-5/12 h-full">
      <!-- <Image
        src={biceps}
        alt="muscle"
        class="border border-theme-primary rounded-xl w-full"
      /> -->
      <img
        src={`/muscles${img}.svg`}
        alt={`mÃºculo a trabajar: ${title}`}
        class="border border-theme-primary rounded-xl w-full"
      />
    </div>
    <div class="w-6/12 flex flex-col items-start justify-start h-full gap-1">
      <div class="w-fit h-1/3">
        <ChipCategory name={zone} />
      </div>
      <div class="w-fit h-2/3 font-medium text-base">
        <p><strong>{`${series}`.padStart(2, "0")}</strong> Series</p>
        <p><strong>{`${rep}`.padStart(2, "0")}</strong> Repeticiones</p>
      </div>
    </div>
  </div>
  <div class="flex items-center justify-end px-4 h-fit -translate-y-2">
    <a
      class="flex bg-theme-primary px-2 py-1 text-theme-text-light w-fit rounded-md text-xs gap-1 items-center"
      class:list={{
        ["opacity-0"]: true,
      }}
    >
      Ver ejercicio
      <svg
        width="19"
        height="19"
        viewBox="0 0 19 19"
        fill="none"
        xmlns="http://www.w3.org/2000/svg"
      >
        <path
          d="M7.98523 2.40094L8.78196 1.60421C9.11931 1.26686 9.66482 1.26686 9.99858 1.60421L16.9753 8.57738C17.3127 8.91473 17.3127 9.46024 16.9753 9.79401L9.99858 16.7708C9.66123 17.1081 9.11572 17.1081 8.78196 16.7708L7.98523 15.974C7.64429 15.6331 7.65146 15.0768 7.99958 14.7431L12.3242 10.623H2.00977C1.53245 10.623 1.14844 10.239 1.14844 9.76171V8.61327C1.14844 8.13595 1.53245 7.75194 2.00977 7.75194H12.3242L7.99958 3.63192C7.64788 3.29816 7.6407 2.74188 7.98523 2.40094Z"
          fill="white"></path>
      </svg>
    </a>
  </div>
</div>
